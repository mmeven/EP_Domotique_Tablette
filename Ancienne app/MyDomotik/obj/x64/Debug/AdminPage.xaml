<Page
    x:Class="MyDomotik.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyDomotik"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:Name="MainGrid" Background="#FF3C4093" Height="757">
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="683*"/>

        </Grid.RowDefinitions>

        <Grid Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270*"/>
                <ColumnDefinition Width="845*"/>
                <ColumnDefinition Width="251*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="65" Grid.Row="0" Grid.Column="0" Stroke="Black" VerticalAlignment="Center" Width="252"/>

            <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="center" Height="65" Grid.Row="0" Grid.Column="1" Stroke="Black" VerticalAlignment="Center" Width="832"/>

            <Button x:ConnectionId='4' x:Name="retourMenuAdmin" HorizontalAlignment="Center" VerticalAlignment="Center"  BorderBrush="{x:Null}"  Foreground="#FF060606" FontWeight="Bold" Grid.Row="0" Grid.Column="0" FontSize="30" Height="71" Margin="6,7,6,6" Width="258" Background="#FFF8FF61" IsEnabled="False"                  >
                <TextBlock TextWrapping="Wrap"  Foreground="Black" FontSize="24" FontWeight="Bold">
                	<Run FontSize="30" Text=""/>
                </TextBlock>
            </Button>

            <TextBlock x:Name="page_title" HorizontalAlignment="Center" Height="48" TextWrapping="Wrap" VerticalAlignment="Center" Width="832" FontSize="30" TextAlignment="Center" FontFamily="Segoe UI" Foreground="Black" Grid.Row="0" Grid.Column="1" FontWeight="Bold">
    			<Run Foreground="Black" Text="Menu"/>
            </TextBlock>

            <Button x:ConnectionId='5' x:Name="quitterAdmin" BorderBrush="{x:Null}" Background="#FFE04214" Foreground="#FFF7EEEE" FontSize="18" Margin="2,7,0,0" Grid.Row="0" Grid.Column="2"                   HorizontalAlignment="Left" VerticalAlignment="Top" Width="247" Height="71">
                <TextBlock TextWrapping="Wrap"  Foreground="Black" FontSize="24" FontWeight="Bold">
                	<Run FontSize="30" Text="Quitter"/>
                </TextBlock>
            </Button>

        </Grid>


        <Grid x:Name="admin_buttons_grid" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="130"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="130"/>
            </Grid.RowDefinitions>

            <Button x:ConnectionId='1' x:Name="admin_button_1"  Content="Paramètres interface" HorizontalAlignment="Left" Height="84" Grid.Row="0" VerticalAlignment="Top" Width="802" Background="#FFFFA200" FontSize="36"                            />

            <Button x:ConnectionId='2' x:Name="admin_button_2" Content="Gestion des icones" HorizontalAlignment="Left" Height="84" Grid.Row="1" VerticalAlignment="Top" Width="802" Background="#FFFFA200" FontSize="36"                      />

            <Button x:ConnectionId='3' x:Name="admin_button_3" Content="Réglages réseau" HorizontalAlignment="Left" Height="84" Grid.Row="2" VerticalAlignment="Top" Width="802" Background="#FFFFA200" FontSize="36"                        />

            <Button x:Name="admin_button_4" Content="Autres" HorizontalAlignment="Left" Height="84" Grid.Row="3" VerticalAlignment="Top" Width="802" Background="#FFFFA200" FontSize="36"/>

        </Grid>




    </Grid>
</Page>

