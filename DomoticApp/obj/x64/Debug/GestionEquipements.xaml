            <TextBox x:Name="nomChamp2" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center"  Grid.Column="1" Height="42" Width="370" Background="#FFA49090" FontSize="24" FontWeight="Bold" Text=""/>
