                    </Image.RenderTransform>
                </Image>
            </Grid>
        </Button>

        <Button x:ConnectionId='2' x:Name="next2" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" BorderBrush="{x:Null}" Background="#FF47CB16" Height="59" Width="79"                       Margin="0,222,0,229">
