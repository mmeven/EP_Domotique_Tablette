        <Button x:ConnectionId='1' x:Name="previous2" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FF47CB16" BorderBrush="{x:Null}" Height="59" Width="79"                         Margin="0,222,0,229">
